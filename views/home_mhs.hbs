

<div class="flex flex-col w-full max-md:max-w-full">
  <section class="flex flex-col self-end mt-2 mr-12 w-full max-w-[1066px] max-md:mr-2.5 max-md:max-w-full">
    <h2 class="self-start text-2xl font-bold leading-loose text-center text-indigo-950 max-md:ml-0.5">
      Kegiatan Kampus dan Volunteer
    </h2>
    <div class="mt-11 max-md:mt-10 max-md:max-w-full">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5">
        {{#each data.kegiatan }}
          <article class="flex flex-col w-full">
            <div class="flex flex-col grow pb-2 w-full bg-white rounded-xl border border-solid border-black border-opacity-10">
              <img
                loading="lazy"
                src="https://cdn.builder.io/api/v1/image/assets/TEMP/f910b45c39d5f0e784595f31ddb80b1b29b34456488addb85881deb0c1fa7d19"
                class="object-contain w-full rounded-xl aspect-[1.86]"
                alt="{{ this.nama_kegiatan }}"
              />
              <div class="flex flex-col px-4 items-start mt-7 w-full">
                <h3 class="text-xl font-medium text-indigo-950">
                  {{ this.nama_kegiatan }}
                </h3>
                <p class="self-stretch mt-4 mb-8 text-xs text-indigo-950">
                  {{ this.deskripsi }}
                </p>
                <div class="flex gap-5 justify-between mt-11 w-full max-md:mt-10">
                  <button
                    class="flex gap-2 self-start text-base justify-center items-center font-medium text-center text-cyan-600"
                    data-hs-overlay="#modal-{{ this.kegiatan_id }}"
                  >
                    <span class="grow">Lihat Kegiatan</span>
                    <img
                      loading="lazy"
                      src="https://cdn.builder.io/api/v1/image/assets/TEMP/f67b8f6518d4f67ea7e77741354d108243e0a07b2d32c13d9c8e96bc3659500e"
                      class="object-contain shrink-0 my-auto w-2.5 aspect-square"
                      alt=""
                    />
                  </button>
                  <div class="flex flex-col whitespace-nowrap">
                    <a class="self-start px-5 pt-1.5 pb-3 text-xs font-medium bg-cyan-600 rounded-xl text-neutral-100" 
                       href="/mahasiswa/daftar?user={{../data.user.user_id}}&kegiatan={{this.kegiatan_id}}" 
                       tabindex="0">
                      Daftar
                    </a>
                    <time datetime="{{ this.tanggal_mulai }}" class="mt-1 text-xs text-indigo-950">
                      {{ this.tanggal_mulai }} - {{ this.tanggal_selesai }}
                    </time>
                  </div>
                </div>
              </div>
            </div>
          </article>

          <!-- Modal untuk setiap kegiatan -->
          <div id="modal-{{ this.kegiatan_id }}" class="hs-overlay hidden size-full fixed top-0 start-0 z-[80] overflow-x-hidden overflow-y-auto bg-black bg-opacity-60">
            <div class="hs-overlay-open:mt-7 hs-overlay-open:opacity-100 hs-overlay-open:duration-500 mt-0 opacity-0 ease-out transition-all sm:max-w-lg sm:w-full m-3 sm:mx-auto">
              <div class="relative flex flex-col bg-white shadow-lg rounded-xl">
                <div class="relative overflow-hidden min-h-32 bg-gray-900 text-center rounded-t-xl">
                  <button type="button" 
                          class="absolute top-2 end-2 flex justify-center items-center size-7 text-sm font-semibold rounded-full border border-transparent text-white/70 hover:bg-white/10"
                          data-hs-overlay="#modal-{{this.kegiatan_id}}">
                    <span class="sr-only">Close</span>
                    <svg class="flex-shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
                  </button>
                  
                  <figure class="absolute inset-x-0 bottom-0">
                    <svg preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" viewBox="0 0 1920 100.1">
                      <path fill="currentColor" class="fill-white" d="M0,0c0,0,934.4,93.4,1920,0v100.1H0L0,0z"></path>
                    </svg>
                  </figure>
                </div>

                <div class="p-8">
                  <h3 class="text-xl font-semibold text-gray-800">{{ this.nama_kegiatan }}</h3>
                  <time datetime="{{ this.tanggal_mulai }}" class="block mt-4 text-sm text-gray-600">
                    {{ this.tanggal_mulai }} - {{ this.tanggal_selesai }}
                  </time>
                  <p class="mt-5 text-gray-600">{{ this.deskripsi }}</p>
                  <a href="/mahasiswa/daftar?user={{ ../data.user.user_id }}&kegiatan={{ this.kegiatan_id }}" 
                     class="mt-8 inline-flex justify-center items-center px-6 py-3 text-sm font-medium text-white bg-cyan-600 rounded-lg hover:bg-cyan-700">
                    Daftar
                  </a>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>

