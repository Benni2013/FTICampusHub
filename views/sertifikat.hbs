<div class="bg-white rounded-lg shadow p-6">
  <div class="mb-6">
    <h3 class="text-lg font-semibold">Daftar Sertifikat Kegiatan</h3>
  </div>

  <!-- Table -->           
  <table class="min-w-full divide-y divide-gray-200">             
    <thead>               
      <tr class="bg-gray-100">                 
        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-800 uppercase tracking-wider">No.</th>                 
        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-800 uppercase tracking-wider">Nama Kegiatan</th>                 
        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-800 uppercase tracking-wider">Waktu Pelaksanaan</th>                 
        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-800 uppercase tracking-wider">Penyelenggara</th>                 
        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-800 uppercase tracking-wider">Jabatan</th>                 
        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-800 uppercase tracking-wider">Aksi</th>               
      </tr>             
    </thead>             
    <tbody class="divide-y divide-gray-200">
      {{#each data.dataPendaftaran}}
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 whitespace-nowrap text-sm text-blue-600">{{plus @index 1}}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">{{Kegiatan.nama_kegiatan}}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
            {{formatDate Kegiatan.tanggal_mulai}} - {{formatDate Kegiatan.tanggal_selesai}}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">{{Kegiatan.Penyelenggara.nama_penyelenggara}}</td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">{{jabatan}}</td>
          <td class="px-6 py-4 whitespace-nowrap">
            <a href="/sertifikat/download?kegiatan={{Kegiatan.kegiatan_id}}&user={{../data.user.user_id}}" 
               class="inline-flex items-center px-3 py-1 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
              Download Sertifikat
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>           
  </table>
</div>