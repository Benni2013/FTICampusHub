<form action="editprofile?user={{ data.user.user_id }}" method="POST" class="flex flex-col justify-center items-center self-center px-8 py-7  bg-gray-700 rounded-3xl shadow-lg w-full max-w-[500px]">
  <div class="relative w-full mb-5">
    <div class="flex justify-center items-center w-full h-[150px] mb-4">
      <!-- Profile Picture Container -->
      <div class="relative w-[150px] h-[150px] rounded-full overflow-hidden border-4 border-white">
        {{#if data.user.pp_path}}
        <img src="/pp_mahasiswa/{{ data.user.pp_path }}"
             class="absolute top-0 left-0 w-full h-full object-cover"
             alt="Current profile picture">
        {{else}}
        <img src="/pp_mahasiswa/pp_mahasiswa_default.png"
             class="absolute top-0 left-0 w-full h-full object-cover"
             alt="Default profile picture">
        {{/if}}
      </div>
      <!-- Upload Button -->
      {{!-- <button
        type="button"
        class="flex z-10 flex-col justify-center items-center self-end px-1.5 mt-2 -mb-1 bg-cyan-600 rounded-full h-[30px] shadow-[0px_4px_4px_rgba(0,0,0,0.25)] w-[30px] focus:outline-none focus:ring-2 focus:ring-white"
        aria-label="Upload new profile picture"
      >
        <img
          loading="lazy"
          src="https://cdn.builder.io/api/v1/image/assets/TEMP/a9bab7ab21ed6684d7590dc392a9ff3b098b7ebffd936d3702129b8a3b1b80a7?placeholderIfAbsent=true&apiKey=863c3774457247cf9941fba7937e9907"
          class="object-contain w-full aspect-square"
          alt=""
          aria-hidden="true"
        />

      </button> --}}
      
    </div>
  </div>
  <!-- Name Field -->
  <div class="w-full mb-4">
    <label for="name" class="block text-sm font-semibold text-white mb-2">Nama:</label>
    <input type="text"  value="{{ data.user.nama }}" class="w-full p-3 rounded-xl bg-white text-gray-800" disabled>
    <input type="hidden" name="nama" value="{{data.user.nama}}" />
  </div>
  <!-- Email Field -->
  <div class="w-full mb-4">
    <label for="email" class="block text-sm font-semibold text-white mb-2">Email:</label>
    <input type="email"  value="{{ data.user.email }}" class="w-full p-3 rounded-xl bg-white text-gray-800" disabled>
    <input type="hidden" name="email" value="{{data.user.email}}" />
  </div>
  <div class="w-full mb-4">
    <label for="email" class="block text-sm font-semibold text-white mb-2">Nim:</label>
    <input type="text"  value="{{ data.user.nim }}" class="w-full p-3 rounded-xl bg-white text-gray-800" disabled>
    <input type="hidden" name="nim" value="{{data.user.nim}}" />
  </div>
  <!-- Phone Field -->
  <div class="w-full mb-6">
    <label for="no_telp" class="block text-sm font-semibold text-white mb-2">No. Telp:</label>
    <input type="text" id="no_telp" name="no_telp" value="{{ data.user.no_telp }}" class="w-full p-3 rounded-xl bg-white text-gray-800">
  </div>
  <!-- Logout Button -->
  <button type="submit" class="w-full p-3 bg-cyan-600 text-white font-semibold rounded-xl hover:bg-cyan-700 transition-colors">
    Simpan
  </button>

</form>